<% include partials/header %>

<div class="container container-style">
    <h1 class="mt-5 mb-5 text-center">Create a new post</h1>
    <form class="form-width" action="/blogs" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="blog[title]" placeholder="title" value="<%= blog.title %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="blog[image]" placeholder="image URL" value="<%= blog.image %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="blog[description]" placeholder="description" value="<%= blog.description %>">
        </div>
        <input type="submit" class="btn btn-block btn-primary" value="Submit">
    </form>
   
</div>

<% include partials/footer %>